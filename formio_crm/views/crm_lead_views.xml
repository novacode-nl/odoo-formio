<flectra>
    <record id="crm_case_form_view_oppor_formio_crm_lead" model="ir.ui.view">
        <field name="name">crm.lead.form.opportunity.formio.partner</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="action"
                    name="%(formio.action_formio_form)d"
                    context="{'search_default_res_id': id, 'search_default_res_model_id': formio_this_model_id, 'default_res_model_id': formio_this_model_id, 'default_res_id': id}"
                    class="oe_stat_button"
                    icon="fa-file-text">
                    <field name="formio_forms_count" widget="statinfo" string="Forms.io"/>
                </button>
            </div>
            <xpath expr="//form/sheet/notebook" position="after">
                <field name="formio_this_model_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</flectra>
